---
import { Image } from 'astro:assets';
import type { SpotifyImage } from '../../libs/spotify';
interface Props {
  title: string;
  description: string;
  img: SpotifyImage[];
  href: string;
}

const { title, description, img, href } = Astro.props;
---

<a class='flex w-full pr-1 text-black lg:pr-2' href={href}>
  <Image
    class='mr-3 h-16 rounded-sm lg:mr-4'
    src={img[2].url}
    alt=''
    width={64}
    height={64}
  />
  <div class='flex flex-col'>
    <p class='font-bold'>{title}</p>
    <p class='break-words text-sm'>{description}</p>
  </div>
  <svg
    aria-hidden='true'
    xmlns='http://www.w3.org/2000/svg'
    fill='none'
    viewBox='0 0 24 24'
    stroke-width='2.5'
    stroke='currentColor'
    class='ml-auto size-4 shrink-0 self-end'
  >
    <path
      stroke-linecap='round'
      stroke-linejoin='round'
      d='m4.5 19.5 15-15m0 0H8.25m11.25 0v11.25'></path>
  </svg>
</a>
